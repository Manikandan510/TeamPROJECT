@model EcommPortal.Models.ViewModels.CartView

@{
    ViewData["Title"] = "AddToCart";
}

<head>
<style>
    .forms {
        width: 40%;
        height: 60%;
        background: rgba(0, 0, 0, 0.5);
        color: #fff;
        margin: 1%;
        left: 29%;
        position: relative;
        box-sizing: border-box;
        padding: 50px 10px;
        padding-left: 10%;
    }

body { background-size: cover; background-image: url("https://ak8.picdn.net/shutterstock/videos/9142298/thumb/1.jpg"); }
</style>
</head>
<body>
    <div class="forms">

        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddToCart">
                    <h3>Cart</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Customer_Id" class="control-label"></label>
                        <input asp-for="Customer_Id" class="form-control" readonly style="width:auto;" />
                        <span asp-validation-for="Customer_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer_Name" class="control-label"></label>
                        <input asp-for="Customer_Name" class="form-control" readonly style="width:auto;"/>
                        <span asp-validation-for="Customer_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product_Id" class="control-label"></label>
                        <input asp-for="Product_Id" class="form-control" readonly style="width:auto;"/>
                        <span asp-validation-for="Product_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" readonly style="width:auto;" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly style="width:auto;"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group d-none d-print-block">
                        <label asp-for="imagename" class="control-label">Image Name</label>
                        <input asp-for="imagename" class="form-control" readonly style="width:auto;"/>
                        <span asp-validation-for="imagename" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly style="width:auto;"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control" style="width:auto;"/>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DeliveryDate" class="control-label"></label>
                        <input type="date" asp-for="DeliveryDate" class="form-control" min="@ViewBag.Min" style="width:auto;"/>
                        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-success btn-block" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </body>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
