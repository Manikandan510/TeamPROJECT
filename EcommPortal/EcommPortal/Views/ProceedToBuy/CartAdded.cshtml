@model EcommPortal.Models.Cart
@{
    ViewData["Title"] = "CartAdded";
}
<head>
<style>
    .forms {
        margin: 3%;
        left:6%;
        width: 80%;
        height: 520px;
        background: rgba(0, 0, 0, 0.5);
        color: #fff;
        position: relative;
        box-sizing: border-box;
        padding: 10px 40px;
    }

body { background-size: cover; background-image: url("https://ak8.picdn.net/shutterstock/videos/9142298/thumb/1.jpg"); }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="forms">

        <h1>Item Added to Cart</h1>

        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CartId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CartId)
                </dd>
                <dt class="col-sm-2 d-none d-print-block">
                    @Html.DisplayNameFor(model => model.CustomerId)
                </dt>
                <dd class="col-sm-10 d-none d-print-block">
                    @Html.DisplayFor(model => model.CustomerId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CustomerName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CustomerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vendorobj.VendorId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vendorobj.VendorId)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vendorobj.VendorName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vendorobj.VendorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.vendorobj.DeliveryCharge)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.vendorobj.DeliveryCharge)
                </dd>
                <dt class="col-sm-2">
                    Total Price
                </dt>
                <dd class="col-sm-10">
                    @(@Convert.ToInt32(Model.vendorobj.DeliveryCharge)+@Convert.ToInt32(Model.Price))
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZipCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DeliveryDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DeliveryDate)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-success" asp-action="Home" asp-controller="Product"><i class="fa fa-arrow-circle-left"></i> Continue Shopping</a>
            <a class="btn btn-danger" asp-action="Logout" asp-controller="Authentication"><i class="fa fa-power-off"></i> LogOut</a>

        </div>
    </div>
</body>