@model EcommPortal.Models.ViewModels.WishlistStatusViewModel
@{
    ViewData["Title"] = "WishlistStatus";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .forms {
            margin: 5%;
            margin-left: 10%;
            width: 80%;
            height: 260px;
            background: rgba(0, 0, 0, 0.5);
            color: #fff;
            position: center;
            box-sizing: border-box;
            padding: 20px 40px;
        }

    body { background-size: cover; background-image: url("https://ak8.picdn.net/shutterstock/videos/9142298/thumb/1.jpg"); }
