<body>

    <div class="forms">
        <h1>Wishlist Status</h1>
        <hr style="color:white;"/>
        <div>
            <center>
            <h5 style="font-weight:bold;"><i class="fa fa-envelope" style="font-size:larger"></i> @Html.DisplayNameFor(model => model.Message) </h5>  
                <br />
                @Html.DisplayFor(model => model.Message)
            <br />
            <br/>
                    
                        <a class="btn btn-success" asp-action="Home" asp-controller="Product"><i class="fa fa-arrow-circle-left"></i> Continue Shopping</a>
