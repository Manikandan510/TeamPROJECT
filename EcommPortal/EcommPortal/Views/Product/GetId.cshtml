
@{
    ViewData["Title"] = "GetId";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .forms {
            width: 430px;
            height: 320px;
            background: rgba(0, 0, 0, 0.5);
            color: #fff;
            margin: 10%;
            left: 25%;
            position: relative;
            box-sizing: border-box;
            padding: 50px 10px;
            padding-left:6%;
            
        }
    body { background-size: cover; background-image: url("https://ak8.picdn.net/shutterstock/videos/9142298/thumb/1.jpg"); }
   
    </style>
</head>
<body>
    <div class="forms">
        <h4> Search Product By ID</h4>
        <div class="row">
            <div class="col-md-4">
                <form action="GetProductById" method="get">

                    <div class="form-group">
                        <label class="control-label">Enter Id</label>
                        <input type="text" name="Id" class="form-control" style="width:auto;"/>
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search " style="font-size:large"></i> Search</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

