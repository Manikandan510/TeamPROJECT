@model EcommPortal.Models.ViewModels.RatingStatusViewModel

@{ ViewData["Title"] = "RatingAdded"; }

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .forms {
            margin: 5%;
            margin-left: 10%;
            width: 80%;
            height: 380px;
            position: center;
            padding: 50px 40px;
        }

    body { background-size: cover; background-image: url("https://ak8.picdn.net/shutterstock/videos/9142298/thumb/1.jpg"); }
    </style>

</head>
<body>

    <div class="forms">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card bg-light">
                        <div class="card-header bg-success">
                            <h5>Rating Added To Product Successfully</h5>
                        </div>
                        <div class="card-body">
                            <p>Status : @Model.Message</p>
                            <div>
                                <a class="btn btn-success" asp-action="Home" asp-controller="Product"><i class="fa fa-arrow-circle-left"></i> Continue Shopping</a>
                                <a class="btn btn-danger" asp-action="Logout" asp-controller="Authentication"><i class="fa fa-power-off"></i> LogOut</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</body>
